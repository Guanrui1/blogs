/* ********************************************** Colors */
dark-black = #221522;
medium-black = #777;
light-black = #ccc;
/* ********************************************** Values */
scrollbar-width = 0.625rem;
sidebar-width = 25rem;
navbar-height = 3.6rem;

.page {
    padding-left: sidebar-width;
}

.page > .content__default {
    // codepen block
    .cp_embed_wrapper {
        margin-top: 1em;
    }

    body {
        -webkit-font-smoothing: antialiased;
    }

    h1, h2, h3 {
        margin-top: 1.5em;
        margin-bottom: 0;
        border: none;
        text-align: left;
        color: var(--text-black);
        font-family: var(--font-text--bold);
    }

    h1 {
        margin-top: 1.25rem !important;
        font-size: 3rem;
    }

    h2 {
        font-size: 1.875rem;
        font-weight: 700;
        line-height: 4.375rem;
        letter-spacing: 1px;
    }

    h3 {
        margin-top: 1em;
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 4.375rem;
        letter-spacing: 1px;
    }

    & > p > img {
        display: block;
        vertical-align: middle;
    }

    p {
        margin-top: 1rem;
        margin-bottom: 0;
        font-size: 1.3125rem;
        color: var(--text-black);
        line-height: 2;
        text-rendering: optimizeLegibility;
        text-align: justify;
        font-style: normal;
        word-break: break-all;
    }

    p + p {
        margin-top: 1em;
    }

    .custom-block {
        border-radius: 6px;

        .custom-block-title {
            display: none;
        }

        p+p {
            margin: 0;
            font-size: 1rem;
        }
    }

    p + div {
        margin-top: 0.5rem;
    }

    h1 + p, h2 + p, h3 + p {
        margin-top: 0;
    }

    hr {
        width: 70%;
        height: 3rem;
        background: url('http://image.lionad.art/mgear/assets/hr.svg');
        background-repeat: no-repeat;
        background-size: 100% auto;
        margin: 5rem auto;
        border: none;
    }

    li {
        margin-top: 1em;
        font-size: 1.3125rem;
        letter-spacing: 0.28px;
        line-height: 2;
    }

    a:not(.header-anchor) {
        color: var(--text-black);
        text-decoration: underline;
        text-decoration-color: var(--text-gray--lighter);
        text-underline-position: under;
        user-select: none;
        transition: text-decoration-color 0.2s;
        cursor: pointer;

        &:visited, &:active {
            color: var(--text-black);
            opacity: 0.8;
        }

        &:hover {
            text-decoration-color: var(--text-gray);
        }
    }

    a.header-anchor {
        position: relative;
        top: -0.05em;
        float: unset;
        margin-top: 0;
        margin-left: -1.7em;
        padding-right: 0;
        text-decoration: none !important;
        transition: 0.3s;
    }

    blockquote {
        margin: 1em 0;
        padding: 0.4em 1em 0.5em 2em;
        border-left: solid 0.25rem var(--text-gray);
        font-size: 1.375rem;
        color: var(--text-gray);
        letter-spacing: 1px;
        word-break: break-all;
        text-align: justify;
    }

    blockquote > p:nth-child(1) {
        margin-top: 0;
    }

    blockquote + p {
        margin-top: 0.8em;
    }

    h1 + blockquote, h2 + blockquote, h3 + blockquote {
        margin-top: 2em;
    }

    ol, ul {
        padding-inline-start: 3.25em;
        padding-inline-end: 3.25em;
        list-style: square outside;
    }

    mark, .highlighted {
        background: #7DFFB3;
    }

    code {
        background: rgba(0, 0, 0, 0.05);
        border-radius: 3px;
        margin: 0 3px;
        padding: 3px 0.3em;
        font-size: 1.25rem;
        font-family: var(--font-code);
    }

    li code {
        font-size: 1.125rem;
    }

    strong {
        font-family: var(--font-text--bold);
        font-weight: 500;
    }

    .extra-class {
        border-radius: 0;
    }

    pre {
        margin-top: 1rem;
        padding: 1.25rem 1rem;
    }

    pre + p {
        margin-top: 1.8em;
    }

    .first-letter {
        overflow-wrap: break-word;
        font-size: 3.25rem;
        font-weight: 500;
        line-height: 5.25rem;
        display: block;
        position: relative;
        float: left;
        margin: 0px 0.75rem 0 0px;
    }

    .subtitle {
        margin: 0.5em 0 1.2em 0;
        color: var(--text-gray);
    }

    ::selection {
        background-color: lavender;
    }

    h2, h3 {
        position: relative;
        margin: 2em 0 1em 0;
        padding: 0 0.5em;
        line-height: 1.5em;
        background: dark-black;
        color: #fefefe;
        text-transform: uppercase;
        border-radius: 1px;
        font-weight: normal;

        .header-anchor {
            margin-left: -2.7em;
            padding-right: 1em;
        }
    }

    h3 {
        background: medium-black;
    }

    @media screen and (max-width: 760px) {
        h1 {
            font-size: 1.875rem;
        }

        h2 {
            font-size: 1.625rem;
        }

        h3 {
            font-size: 1.25rem;
        }

        p, li, blockquote, code {
            font-size: 1.125rem;
        }

        blockquote {
            padding: 0.3em 1em;
        }

        pre {
            font-size: 1rem;
        }

        li code {
            font-size: 0.9375rem;
        }

        ol, ul {
            padding-inline-start: 2.2em;
            padding-inline-end: 1em;
            font-size: 1rem;

            li {
                margin-top: 0.5em;
                font-size: 1rem;
                line-height: 1.75;
            }
        }

        h2, h3 {
            box-sizing: border-box;
            position: relative;
            padding: 0 1.5rem !important;
            width: 100vw;
            left: -1.5rem;
            border-radius: 0;
        }

        h1, h2, h3, h4, h5, h6 {
            word-break: break-all;
        }

        hr {
            width: 100%;
            height: 1rem;
            margin: 3rem 0 0 0;
            border: none;
        }

        & > p > img {
            margin: 0 auto;
        }
    }
}

@media screen and (max-width: 760px) {
    .page {
        padding-left: 0;
    }

    .sidebar {
        ul.sidebar-links {
            padding-top: 1em;
        }
    }
}
