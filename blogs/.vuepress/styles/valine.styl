/* ********************************************** 整体样式 */
#valine-vuepress-comment {
    margin: 0 auto;
    padding: 2rem 2.5rem;
    max-width: 60rem;
    box-sizing: border-box;
}

@media screen and (min-width: 2000px) {
    #valine-vuepress-comment {
        padding-left: 12rem;
        max-width: 70rem;
    }
}

@media screen and (max-width: 1920px) {
    #valine-vuepress-comment {
        padding-left: 8rem;
    }
}

@media screen and (max-width: 1440px) {
    #valine-vuepress-comment {
        padding-left: 2.5rem;
    }
}

@media (max-width: 750px) {
    #valine-vuepress-comment {
        padding: 1.5rem;
    }
}

/* ********************************************** 局部调整 */
#valine-vuepress-comment {
    .vwrap {
        border: solid 2px;
        border-radius: 1px;

        .vheader .vinput {
            border-bottom: dashed 2px;
            font-weight: bold;
            font-family: consolas;
        }

        .vheader, .vedit, #veditor {
            font-family: var(--font-text--general);
            letter-spacing: 0.5px;
        }

        .vrow {
            padding-top: 0;

            .vcol-30, .status-bar, .markdown {
                display: none;
            }

            .vcol-70 {
                width: 100%;

                .vsubmit {
                    background: #221522;
                    color: white;
                    font-weight: bold;
                    border: none;
                    border-radius: 1px;
                }
            }

            .vctrl {
                position: relative;
                top: 30px;
                padding-left: 0.5em;
                float: left;
                text-align: left;
            }
        }

        .vedit .vrow {
            padding: 0;
        }
    }

    .vcard {
        .vsys {
            display: none;
        }

        .vcontent {
            font-size: 1em;
        }
    }
}