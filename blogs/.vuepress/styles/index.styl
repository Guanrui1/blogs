    border-radius: 3px;
    margin: 0 3px;
    padding: 3px 0.3em;
    font-size: 1.25rem;
    font-family: var(--font-code);
  }

  li code {
    font-size: 1.125rem;
  }

  strong {
    font-family: var(--font-text--bold);
    font-weight: 500;
  }

  .extra-class {
    border-radius: 0;
  }

  pre {
    margin-top: 1rem;
    padding: 1.25rem 1rem;
  }

  pre + p {
    margin-top: 1.8em;
  }

  .first-letter {
    overflow-wrap: break-word;
    font-size: 3.25rem;
    font-weight: 500;
    line-height: 5.25rem;
    display: block;
    position: relative;
    float: left;
    margin: 0px 0.75rem 0 0px;
  }

  .subtitle {
    margin: 0.5em 0 1.2em 0;
    color: var(--text-gray);
  }

  ::selection {
    background-color: lavender;
  }

  h2, h3 {
    position: relative;
    margin: 2em 0 1em 0 !important;
    padding: 0 0.5em !important;
    line-height: 1.5em;
    background: dark-black;
    color: #fefefe;
    text-transform: uppercase;
    border-radius: 1px;
    font-weight: normal;

    .header-anchor {
      margin-left: -2.7em;
      padding-right: 1em;
    }
  }

  h3 {
    background: medium-black;
  }

  /* ********************************************** TOC */
  .table-of-contents {
    position: fixed;
    transform: translateX(calc(-100% - 4rem)) translateY(3.3125rem);
    text-align: right;
    list-style: none;

    & > ol {
      margin-top: 0;
    }

    ul, ol {
      list-style: unset;
      padding-inline-start: 0;
      padding-inline-end: 0;
    }

    & > ol > li {
      &:first-child:before {
        content: 'TABLE OF CONTENTS';
        padding: 3px 0.625rem;
        font-family: fantacy;
        font-weight: lighter;
        letter-spacing: 2px;
        border: solid 2px;
        border-right: solid 8px;
      }

      & > ol {
        margin-top: 1em;
      }
    }

    // 去掉一级菜单
    & > ol > li > a {
      display: none;
    }

    li {
      margin: 0;
      line-height: unset;

      a {
        font-size: 1rem;
        font-weight: 400;
        font-family: var(--font-default);
        letter-spacing: 1px;
        text-decoration: none;
        opacity: 1;

        &:hover {
          text-decoration: none;
        }
      }
    }

    & > ol > li > ol > li > a {
      font-weight: bold;
    }

    & > ol > li > ol > li {
      margin-top: 0.1em;
    }

    & > ol > li > ol > li > ol {
      line-height: 1.25em;
    }

    & > ol > li > ol > li > ol > li > a {
      font-size: 0.875rem;
    }

    & > ol > li > ol > li, & > ol > li > ol > li > ol > li {
      transition: 0.2s;

      &:hover {
        background: rgba(0, 0, 0, 0.05);
      }
    }
  }

  @media screen and (min-width: 2000px) {
    .table-of-contents {
      transform: translateX(calc(-100% - 8rem)) translateY(3.3125rem);
    }
  }

  @media screen and (max-width: 1440px) {
    .table-of-contents {
      display: none;
    }
  }

  @media screen and (max-width: 760px) {
    h1 {
      font-size: 1.875rem;
    }

    h2 {
      font-size: 1.625rem;
    }

    h3 {
      font-size: 1.25rem;
    }

    p, li, blockquote, code {
      font-size: 1.125rem;
    }

    blockquote {
      padding: 0.3em 1em;
    }

    pre {
      font-size: 1rem;
    }

    li code {
      font-size: 0.9375rem;
    }

    ol, ul {
      padding-inline-start: 2.2em;
      padding-inline-end: 1em;
      font-size: 1rem;

      li {
        margin-top: 0.5em;
        font-size: 1rem;
        line-height: 1.75;
      }
    }

    h2, h3 {
      box-sizing: border-box;
      position: relative;
      padding: 0 1.5rem !important;
      width: 100vw;
      left: -1.5rem;
      border-radius: 0;
    }

    h1, h2, h3, h4, h5, h6 {
      word-break: break-all;
    }
  }
}

