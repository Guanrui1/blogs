.page > .content__default {
  // codepen block
  .cp_embed_wrapper {
    margin-top: 1em;
  }

  body {
    -webkit-font-smoothing: antialiased;
  }

  h1, h2, h3 {
    margin-top: 1.5em;
    margin-bottom: 0;
    border: none;
    text-align: left;
    color: var(--text-black);
    font-family: var(--font-text--bold);
  }

  h1 {
    margin-top: 1.25rem !important;
    font-size: 3rem;
  }

  h2 {
    font-size: 1.875rem;
    font-weight: 700;
    line-height: 4.375rem;
    letter-spacing: 1px;
  }

  h3 {
    margin-top: 1em;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 4.375rem;
    letter-spacing: 1px;
  }

  p {
    margin-top: 2em;
    margin-bottom: 0;
    font-size: 1.3125rem;
    color: var(--text-black);
    line-height: 2;
    text-rendering: optimizeLegibility;
    text-align: justify;
    font-style: normal;
    word-break: break-all;
  }

  p + p {
    margin-top: 1em;
  }

  .custom-block {
    border-radius: 6px;

    .custom-block-title {
      display: none;
    }

    p+p {
      margin: 0;
      font-size: 1rem;
    }
  }

  p + div {
    margin-top: 0.5em;
  }

  h1 + p, h2 + p, h3 + p {
    margin-top: 0;
  }

  li {
    margin-top: 1em;
    font-size: 1.3125rem;
    letter-spacing: 0.28px;
    line-height: 2;
  }

  a:not(.header-anchor) {
    color: var(--text-black);
    text-decoration: underline;
    text-decoration-color: var(--text-gray--lighter);
    text-underline-position: under;
    user-select: none;
    transition: text-decoration-color 0.2s;
    cursor: pointer;

    &:visited, &:active {
      color: var(--text-black);
      opacity: 0.8;
    }

    &:hover {
      text-decoration-color: var(--text-gray);
    }
  }

  a.header-anchor {
    position: relative;
    top: -0.05em;
    float: unset;
    margin-top: 0;
    margin-left: -1.7em;
    padding-right: 0;
    text-decoration: none !important;
    transition: 0.3s;
  }

  blockquote {
    margin: 1em 0;
    padding: 0.4em 1em 0.5em 2em;
    border-left: solid 0.25rem var(--text-gray);
    font-size: 1.375rem;
    color: var(--text-gray);
    letter-spacing: 1px;
    word-break: break-all;
    text-align: justify;
  }

  blockquote > p:nth-child(1) {
    margin-top: 0;
  }

  blockquote + p {
    margin-top: 0.8em;
  }

  h1 + blockquote, h2 + blockquote, h3 + blockquote {
    margin-top: 2em;
  }

  ol, ul {
    padding-inline-start: 3.25em;
    padding-inline-end: 3.25em;
