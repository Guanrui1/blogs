:root {
  --text-black: rgba(0, 0, 0, 0.85);
  --text-black--lighter: rgba(0, 0, 0, 0.8);
  --text-gray: rgba(0, 0, 0, 0.54);
  --text-gray--lighter: rgba(0, 0, 0, 0.3);
  --font-code: 'Fira', 'Consolas', 'Monaco', 'Courier New', 'Courier', 'monospace';
  --font-text: 'Noto Serif CJK', 'Lato', 'Noto Serif', 'Noto Serif CJK SC', 'Noto Serif CJK', 'Source Han Serif SC', 'Source Han Serif', 'source-han-serif-sc', '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  --font-text--general: 'Noto Serif CJK', 'Consolas', '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  --font-text--bold: 'Noto Serif CJK BOLD', 'Lato', 'Noto Serif', 'Noto Serif CJK SC', 'Noto Serif CJK', 'Source Han Serif SC', 'Source Han Serif', 'source-han-serif-sc', '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

@font-face {
  font-family: Dhenmark;
  src: url('https://blog-image.obs.myhuaweicloud.com/mgear/fonts/Dhenmark.ttf');
}

@font-face {
  font-family: 'Noto Serif CJK BOLD';
  font-style: normal;
  font-weight: 600;
  font-display: swap;
  src: local('Noto Serif CJK SemiBold'), local('NotoSerifSC-SemiBold'), local('SourceHanSerifCN-SemiBold'), url('https://blog-image.obs.myhuaweicloud.com/mgear/fonts/SourceHanSerifCN-SemiBold.otf') format('woff2');
}

@font-face {
  font-family: 'Noto Serif CJK';
  font-style: normal;
  font-display: swap;
  src: local('Noto Serif CJK Light'), local('NotoSerifSC-Light'), local('SourceHanSerifCN-Light'), url('https://blog-image.obs.myhuaweicloud.com/mgear/fonts/SourceHanSerifCN-Light.otf') format('woff2');
}

body {
  font-family: var(--font-text--general);
}

.sidebar {
  width: 25em;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  border: none;
}

.navbar {
  font-family: none;
  background-color: rgba(254, 220, 200, 0.95);
  border-bottom: solid 1px #ecdad2;

  .site-name {
    color: #221522 !important;

    &::before {
      content: ' ';
      background: url('/images/avatar.gif');
    }
  }

  .links {
    background-color: #fedcc8 !important;
  }

  .search-box input {
    background-color: #fbebe1 !important;
  }

  .search-box input:focus {
    border-color: #843c46 !important;
  }
}

.page-nav {
  font-family: none;

  p {
    font-size: 14px !important;
  }
}

.home {
  .content {
    margin: 0 !important;
    padding: 0 !important;
    text-align: center;
  }
}

div[class*='language-'] {
  background-color: rgba(0, 0, 0, 0.85);
}

// 禁用A标签后面携带的链接标志
.icon.outbound {
  display: none;
}

.first-letter {
  overflow-wrap: break-word;
  font-size: 52px;
  font-weight: 500;
  line-height: 84px;
  display: block;
  position: relative;
  float: left;
  margin: 0px 12px 0 0px;
}

::-webkit-scrollbar {
  width: 10px;
  height: 10px;
  border-radius: 2px;
  background-color: #F5F5F5;
}

/* 定义滚动条轨道 内阴影+圆角 */
::-webkit-scrollbar-track {
  border-radius: 1px;
  background-color: #F5F5F5;
}

/* 定义滑块 内阴影+圆角 */
::-webkit-scrollbar-thumb {
  border-radius: 2px;
  border-radius: 2px;
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.44, #f3e7df),
    color-stop(0.86, #f3e7df)
  );
  transition: 0.3s ease-in-out;
}

/* 定义滑块悬浮样式 */
::-webkit-scrollbar-thumb:hover {
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.44, #e7cebf),
    color-stop(0.86, #dab69e)
  );
  transition: 0.3s ease-in-out;
}

.utterances {
  margin: 80px 0 0 0;
  max-width: unset;
}

.page {
  // codepen block
  .cp_embed_wrapper {
    margin-top: 1em;
  }

  body {
    -webkit-font-smoothing: antialiased;
  }

  h1, h2, h3 {
    margin-top: 1.5em;
    margin-bottom: 0;
    border: none;
    text-align: left;
    color: var(--text-black);
    font-family: var(--font-text--bold);
  }

  h1 {
    margin-top: 0px !important;
    font-size: 48px;
  }

  h2 {
    font-size: 30px;
    font-weight: 700;
    line-height: 70px;
    letter-spacing: 1px;
  }

  h3 {
    margin-top: 1em;
    font-size: 24px;
    font-weight: 700;
    line-height: 70px;
    letter-spacing: 1px;
  }

  p {
    margin-top: 2em;
    margin-bottom: 0;
    font-size: 21px;
    color: var(--text-black);
    line-height: 2;
    text-rendering: optimizeLegibility;
    text-align: justify;
    font-style: normal;
    word-break: break-all;
  }

  p + p {
    margin-top: 1em;
  }

  h1 + p, h2 + p, h3 + p {
    margin-top: 0;
  }

  li {
    margin-top: 1em;
    font-size: 21px;
    letter-spacing: 0.28px;
    line-height: 2;
  }

  a:visited, a:active {
    color: var(--text-black);
    opacity: 0.8;
  }

  a {
    color: var(--text-black);
    text-decoration: underline;
    text-decoration-color: var(--text-gray--lighter);
    text-underline-position: under;
    user-select: none;
    transition: text-decoration-color 0.2s;
    cursor: pointer;
  }

  a:hover {
    text-decoration-color: var(--text-gray);
  }

  blockquote {
    margin: 1em 0;
    padding: 0.4em 1em 0.5em 2em;
    border-left: solid 4px var(--text-gray);
    font-size: 22px;
    color: var(--text-gray);
    letter-spacing: 1px;
    word-break: break-all;
    text-align: justify;
  }

  blockquote > p:nth-child(1) {
    margin-top: 0;
  }

  blockquote + p {
    margin-top: 0.8em;
  }

  h1 + blockquote, h2 + blockquote, h3 + blockquote {
    margin-top: 2em;
  }

  /* blockquote::before {
    content: """;
    margin: 0 0 0 -0.5em;
  }
  blockquote::after {
    content: """;
  } */
  ol, ul {
    padding-inline-start: 2.45em;
    padding-inline-end: 2.45em;
  }

  mark, .highlighted {
    background: #7DFFB3;
  }

  code {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 3px;
    margin: 0 3px;
    padding: 3px 0.3em;
    font-size: 20px;
    font-family: var(--font-code);
  }

  li code {
    font-size: 18px;
  }

  strong {
    font-family: var(--font-text--bold);
    font-weight: 500;
    color: var(--text-black--lighter);
  }

  pre {
    margin-top: 2em;
    padding: 20px;
    border-radius: 4px;
    background: rgba(0, 0, 0, 0.05);
    // line-height: 1.75;
    line-height: 2.3;
    font-size: 16px;
    color: var(--text-black);
    white-space: pre-wrap;
    word-break: break-word;
  }

  pre, pre * {
    font-family: var(--font-code);
  }

  pre + p {
    margin-top: 1.8em;
  }

  .first-letter {
    overflow-wrap: break-word;
    font-size: 52px;
    font-weight: 500;
    line-height: 84px;
    display: block;
    position: relative;
    float: left;
    margin: 0px 12px 0 0px;
  }

  .subtitle {
    margin: 0.5em 0 1.2em 0;
    color: var(--text-gray);
  }

  ::selection {
    background-color: lavender;
  }

  @media screen and (max-width: 800px) {
    h1 {
      font-size: 30px;
    }

    h2 {
      font-size: 26px;
    }

    h3 {
      font-size: 20px;
    }

    p, li, blockquote, code {
      font-size: 18px;
    }

    blockquote {
      padding: 0.3em 1em;
    }

    pre {
      font-size: 16px;
    }

    li code {
      font-size: 15px;
    }
  }
}